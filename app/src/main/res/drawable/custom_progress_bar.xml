<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#DDDDDD" />
            <corners android:radius="25dp" /> <!-- Ajusta el radio para hacer los bordes redondeados -->
            <stroke
                android:width="20dp"
            android:color="#000000" /> <!-- Color del borde -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="#00FF00" /> <!-- Color del progreso -->
                <corners android:radius="25dp" /> <!-- Ajusta el radio para hacer los bordes redondeados -->
            </shape>
        </clip>
    </item>
</layer-list>